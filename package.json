{
  "name": "next-portfolio",
  "description": "My Portfolio Site",
  "author": {
    "email": "coreyburns@outlook.com",
    "name": "Corey Burns",
    "url": "https://coreyburns.dev"
  },
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://https://github.com/burnsco/next-portfolio.git"
  },
  "license": "MIT",
  "keywords": [
    "gatsby",
    "typescript",
    "next.js",
    "portfolio",
    "front-end",
    "back-end",
    "nextjs",
    "react",
    "graphql",
    "full-stack",
    "emotion",
    "chakra-ui",
    "styled-system"
  ],
  "scripts": {
    "dev": "next",
    "build-export": "next build && next export",
    "start": "next start",
    "analyze": "BUNDLE_ANALYZE=both yarn build",
    "find:unused": "next-unused",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.12",
    "@chakra-ui/react": "^1.6.0",
    "@chakra-ui/theme-tools": "1.1.6",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.3.0",
    "framer-motion": "^4.1.11",
    "next": "^10.2.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-headroom": "^3.1.1",
    "react-icons": "^4.2.0",
    "react-intersection-observer": "^8.31.1",
    "react-scroll": "^1.8.2",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-headroom": "^2.2.1",
    "@types/react-scroll": "^1.8.2",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "next-unused": "^0.0.6",
    "prettier": "^2.2.1",
    "typescript": "4.2.4"
  },
  "next-unused": {
    "alias": {
      "@common/*": [
        "components/common/*"
      ],
      "@sections/*": [
        "components/sections/*"
      ],
      "@ui/*": [
        "components/ui/*"
      ],
      "@configs/*": [
        "configs/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "debug": true,
    "include": [
      "components",
      "configs",
      "pages"
    ],
    "exclude": [],
    "entrypoints": [
      "pages"
    ]
  }
}
